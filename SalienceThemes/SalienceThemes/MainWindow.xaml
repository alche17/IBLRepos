<Window x:Class="SalienceThemes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:resx="clr-namespace:SalienceThemes.Properties"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{x:Static resx:Strings.Label_Heading_SalienceThemes}" Height="700" Width="600"
        MinHeight="700" MinWidth="600"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Window.Resources>
        <DataTemplate x:Key="ArrowUp">
            <DockPanel>
                <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                <Path VerticalAlignment="Center" Fill="Black" Data="M 5,5 15,5 10,0 5,5" />
            </DockPanel>
        </DataTemplate>
        <DataTemplate x:Key="ArrowDown">
            <DockPanel>
                <TextBlock HorizontalAlignment="Center" Text="{Binding}" />
                <Path VerticalAlignment="Center" Fill="Black" Data="M 5,0 10,5 15,0 5,0" />
            </DockPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Salience Themes Menu Toolbar -->
        <materialDesign:ColorZone Mode="PrimaryMid" Padding="16" Margin="0 0 0 5">
            <StackPanel Orientation="Horizontal">
                <ToggleButton Style="{DynamicResource MaterialDesignHamburgerToggleButton}" />
                <TextBlock Style="{StaticResource MaterialDesignHeadlineTextBlock}" VerticalAlignment="Center" Text="{x:Static resx:Strings.Label_Heading_SalienceThemes}">
                </TextBlock>
            </StackPanel>
        </materialDesign:ColorZone>
        
        <!-- Main View Cards -->
        <Border Grid.Row="1">
            <ScrollViewer>
                <StackPanel VerticalAlignment="Top">
                    <!--Licensing Card-->
                    <materialDesign:Card Padding="8" Margin="10 5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Margin="5 10 0 0" Grid.ColumnSpan="2" Style="{StaticResource MaterialDesignTitleTextBlock}" Text="{x:Static resx:Strings.Label_Heading_Licensing}">
                                <materialDesign:PackIcon Margin="5 0 0 0" Kind="InformationOutline" />
                            </TextBlock>
                            <Separator Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource MaterialDesignDarkSeparator}" />
                            <!--License Path Input Field-->
                            <TextBox Margin="5" Grid.Row="2" Text="{Binding LicensePath}" 
                                     materialDesign:HintAssist.Hint="Floating hint in a box"
                                     Style="{StaticResource MaterialDesignTextFieldBoxTextBox}" />
                            <!--Data Path Input Field-->
                            <TextBox Margin="5" Grid.Row="3" Text="{Binding DataPath}" 
                                     materialDesign:HintAssist.Hint="Floating hint in a box"
                                     Style="{StaticResource MaterialDesignTextFieldBoxTextBox}"/>
                        </Grid>
                    </materialDesign:Card>

                    <!--Text Analysis Card-->
                    <materialDesign:Card Padding="8" Margin="10 5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="5 10 0 0" Grid.ColumnSpan="3" Style="{StaticResource MaterialDesignTitleTextBlock}" Text="{x:Static resx:Strings.Label_Heading_TextAnalysis}">
                                <materialDesign:PackIcon Margin="5 0 0 0" Kind="InformationOutline" />
                            </TextBlock>
                            <Separator Grid.Row="1" Grid.ColumnSpan="3" Style="{StaticResource MaterialDesignDarkSeparator}" />
                            <!--Text Analysis Input Field-->
                            <TextBox Grid.Row="2" Grid.ColumnSpan="3" 
                                     Style="{StaticResource MaterialDesignTextFieldBoxTextBox}"
                                     VerticalAlignment="Top"
                                     Margin="5 5"
                                     Height="140"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     materialDesign:HintAssist.Hint="Input Text"
                                     IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignTextAreaTextBoxEnabledComboBox}"
                                     Text="{Binding InputText,Mode=TwoWay}"/>
                            <!--Text Analysis Buttons-->
                            <Button Style="{StaticResource MaterialDesignRaisedAccentButton}" Margin="10" Grid.Column="1" Grid.Row="3" Name="ButtonProcess" Content="Process" Command="{Binding Process}" />
                            <Button Style="{StaticResource MaterialDesignRaisedAccentButton}" Margin="10" Grid.Column="2" Grid.Row="3" Name="ButtonClear" Content="Clear" Command="{Binding Clear}" />
                        </Grid>
                    </materialDesign:Card>

                    <!--Results Card-->
                    <materialDesign:Card Padding="8" Margin="10 5 10 10">
                        <materialDesign:Card.Style>
                            <Style TargetType="materialDesign:Card">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasResults}" Value="False">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HasResults}" Value="True">
                                        <Setter Property="Visibility" Value="Hidden" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:Card.Style>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="5 10 0 0" Style="{StaticResource MaterialDesignTitleTextBlock}" 
                                       Text="{x:Static resx:Strings.Label_Heading_Results}">
                                <materialDesign:PackIcon Margin="5 0 0 0" Kind="InformationOutline" />
                            </TextBlock>
                            <Separator Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource MaterialDesignDarkSeparator}" />

                            <!--Theme Property List Boxes-->
                            <ListView x:Name="ThemesTable" GridViewColumnHeader.Click="ThemeListViewClick" VerticalAlignment="Top" 
                                      MaxHeight="300" Grid.Row="2" Grid.RowSpan="2" ItemsSource="{Binding Themes}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Theme" />
                                        <GridViewColumn DisplayMemberBinding="{Binding Score}" Header="Score" />
                                        <GridViewColumn DisplayMemberBinding="{Binding Type}" Header="Type" />
                                        <GridViewColumn DisplayMemberBinding="{Binding Sentiment}" Header="Sentiment" />
                                        <GridViewColumn DisplayMemberBinding="{Binding Evidence}" Header="Evidence" />
                                    </GridView>
                                </ListView.View>
                            </ListView>

                            <!--Theme Names as Chips (for user editing)-->
                            <TextBlock Margin="5 10 0 0" Grid.Column="1" Style="{StaticResource MaterialDesignTitleTextBlock}">
                                Removing Themes
                            </TextBlock>
                            <StackPanel Grid.Row="2" Grid.Column="1">
                                <WrapPanel Margin="10 5 5 5">
                                    <ItemsControl Name="Themes" ItemsSource="{Binding Themes}" AlternationCount="{Binding Themes.Count}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <materialDesign:Chip Margin="2" 
                                                                     Content="{Binding Name, Mode=TwoWay}"
                                                                     Tag="{Binding Theme}"
                                                                     IsDeletable="True"
                                                                     DeleteClick="ThemeChip_OnDeleteClick">
                                                </materialDesign:Chip>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </WrapPanel>
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
